<h2 class="text-center mb-5">アカウント編集</h2>

<div class="mx-auto" style="width: 200px;">
  <%= form_with model: @user do |f| %>
    
    <%# <%= f.hidden_field :reset_password_token %> %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <div class="field mb-3">
      <%= f.label :ユーザー名 %> <br />
      <%= f.text_field :name %>
    </div>
    <!-- ユーザー画像フォームも追加 -->
    <div class="field mb-3">
      <%= f.label "画像" %><br> 
        <%# <% if @user.image.present? %>
          <%# <%= image_tag @user.image.url, :size =>'299x200'<br>  %>
          <%# <% else %>
          <%# <%= image_tag 'default.png', :size =>'299x200'<br>   %>
        <%# <% end %> 
      <%# <%= f.file_field :image, value: @user.image %> 
    </div>

    <div class="field mb-3">
      <%= f.label :メールアドレス %><br />
      <%# <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
      <%= f.email_field :email %>
    </div>

    <div class="field mb-3">
      <%= f.label :現在のパスワード %>
      <%# <%= f.password_field :password, autocomplete: "password" %> %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="field mb-3">
      <%= f.label :新しいパスワード %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %>文字以内</em>
      <% end %>
    </div>

    <div class="field mb-3">
      <%= f.label :新しいパスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "保　存" %>
    </div>
  <% end %>
</div>
