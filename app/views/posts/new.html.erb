<h2 class="text-center mb-5">投　稿</h2>

<div class="main posts-new">
  <div class="container">
  　<%= form_with url: posts_create_url, local: true do |f| %>
      <div class="form-group">
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= f.label "画像" %><br><%= f.file_field :image %>
      <div class="form-group">
        <%= f.label "店名" %><br><%= f.text_field :store_name %>
      </div>
      <div class="form-group">
        <%= f.label "wifiの有無" %><br> 
        <%= f.radio_button :wifi, :yes, checked: true %>
        <%= f.label :wifi, "あり", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :wifi, :no %>
        <%= f.label :wifi, "なし", {value: :no, style: "display: inline-block;"} %>
      </div>
      <div class="form-group">
        <%= f.label "電源の有無" %><br>
        <%= f.radio_button :power, :yes, checked: true %>
        <%= f.label :power, "あり", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :power, :no %>
        <%= f.label :power, "なし", {value: :no, style: "display: inline-block;"} %>
      </div>
      <div class="form-group mb-3">
        <%= f.label "クレジットカードの利用" %><br>
        <%= f.radio_button :creditcard, :yes, checked: true %>
        <%= f.label :creditcard, "可", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :creditcard, :no %>
        <%= f.label :creditcard, "不可", {value: :no, style: "display: inline-block;"} %>
      </div>
    　<div class="form-group">
        <%= f.label "おすすめポイント" %><br><%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit "投稿"%>
      </div>
    <% end %>
  </div>
</div>

  