<h2 class="text-center mb-5">投稿一覧</h2>

<div class="container py-5">
  <div class="row -eq-height">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-5">
        <div class="card h-100">
        <!-- 画像からも詳細ページに飛べるようにする -->
          <%# <img src="<%= " class="card-img-top" alt="..."> %> 
          <%# <%= image_tag (post.image_url) if post.image.present? %> 
          <% if post.image.present? %>
            <%= image_tag post.image_url %>
          <% else %>
            <%# <img src="/assets/default.png" class="icon" alt="ユーザーアイコン"> %>
            <%= image_tag 'default.png', :size =>'288x200' %>
            <%# <%= image_tag post.image.url, class:"post-icon" %> 
          <% end %>
          <div class="card-body">
              <h5 class="card-title"><%= link_to(post.store_name, "/posts/#{post.id}") %></h5>
              <p class="card-text"><%= post.content %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


