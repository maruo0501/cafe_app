<h2 class="text-center mb-5">投稿編集</h2>

<div class="main posts-new">
  <div class="container">
    <%= form_with(model: @post, url: "/posts/#{@post.id}/update", local: true) do |f| %>
    　 <div class="form-group">
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= f.label "画像" %><br> 
        <% if @post.image.present? %>
        <%# <%= image_tag @post.image.url if @post.image?<br>    %>
          <%= image_tag @post.image.url, :size =>'299x200' %><br> 
         <% else %>
          <%= image_tag 'default.png', :size =>'299x200' %><br> 
        <% end %>
        <%= f.file_field :image, value: @post.image %>
      </div>
      <div class="form-group">
        <%= f.label "店名" %><br><%= f.text_field :store_name %>
      </div>
      <div class="form-group">
        <label class="control-label">wifiの有無</label>
        <div class="radio">
          <label><input type="radio" name="radio">有り</label>
          <label><input type="radio" name="radio">無し</label>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">電源の有無</label>
        <div class="checkbox">
          <label><input type="radio" name="radio">有り</label>
          <label><input type="radio" name="radio">無し</label>
        </div>
      </div>
      <div class="form-group mb-3">
        <label class="control-label">クレジットカードの利用</label>
        <div class="checkbox">
          <label><input type="radio" name="radio">可</label>
          <label><input type="radio" name="radio">不可</label>
        </div>
      </div>
    　<div class="form-group">
        <%= f.label "おすすめポイント" %><br><%= f.text_area :content, value: @post.content %>
      </div>
      <div class="actions">
        <%= f.submit "保存"%>
      </div>
    <% end %>
  </div>
</div>
