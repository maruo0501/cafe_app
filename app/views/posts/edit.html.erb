<h2 class="text-center mb-5">投稿編集</h2>

<div class="main posts-new">
  <div class="container">
    <%= form_with(model: @post, url: "/posts/#{@post.id}/update", local: true) do |f| %>
    　<div class="form-group">
        <%= f.label "画像" %><br> 
        <% if @post.image.present? %>
          <%= image_tag @post.image.url, :size =>'299x200' %><br> 
         <% else %>
          <%= image_tag 'default.png', :size =>'299x200' %><br>  
        <% end %>
        <%= f.file_field :image, value: @post.image %>
      </div>
      <div class="form-group">
        <%= f.label "店名" %><br><%= f.text_field :store_name, value: @post.store_name %>
        <% if @post.errors.include?(:store_name) %>
          <p style="color: red;"><%= @post.errors.full_messages_for(:store_name).first %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label "wifiの有無" %><br>
        <%= f.radio_button :wifi, :yes %>
        <%= f.label :wifi, "あり", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :wifi, :no %>
        <%= f.label :wifi, "なし", {value: :no, style: "display: inline-block;"} %>
      </div>
      <div class="form-group">
        <%= f.label "電源の有無" %><br>
        <%= f.radio_button :power, :yes %>
        <%= f.label :power, "あり", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :power, :no %>
        <%= f.label :power, "なし", {value: :no, style: "display: inline-block;"} %>
      </div>
      <div class="form-group mb-3">
        <%= f.label "クレジットカードの利用" %><br>
        <%= f.radio_button :creditcard, :yes %>
        <%= f.label :creditcard, "可", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :creditcard, :no %>
        <%= f.label :creditcard, "不可", {value: :no, style: "display: inline-block;"} %>
      </div>
      <div class="form-group mb-3">
        <%= f.label "電子マネーの利用" %><br>
        <%= f.radio_button :electronic_money, :yes %>
        <%= f.label :electronic_money, "可", {value: :yes, style: "display: inline-block;"} %>
        <%= f.radio_button :electronic_money, :no %>
        <%= f.label :electronic_money, "不可", {value: :no, style: "display: inline-block;"} %>
      </div>
    　<div class="form-group">
        <%= f.label "おすすめポイント" %><br><%= f.text_area :content, value: @post.content %>
         <% if @post.errors.include?(:content) %>
          <p style="color: red;"><%= @post.errors.full_messages_for(:content).first %>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "保存"%>
      </div>
    <% end %>
  </div>
</div>
